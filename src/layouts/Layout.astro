---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!--Thanks to DanKGooGLy for a bunch of things here-->
<!DOCTYPE HTML>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/png" href="/favicon.png">
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <style is:global>
            @import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');

            :root {
                font-family: 'Open Sans', sans-serif;
            }

            .announce {
                background-color: #FFF200;
                color: black;
            }

            body {
                background-color: #191B1C;
                color: white;
            }

            .topbar {
                padding-left: 0px;
                background-color: #343434;
            }

            .topbar ul li {
                display: inline-block;
                padding: 10px 20px;
            }

            .topbar ul li:hover {
                background-color: black;
            }
            .topbar ul li a {
                text-decoration: none;
            }
            a {
                color: #7BC4FD;
            }

            a:hover {
                color: #6BA6FD;
            }

            .box {
                border-radius: 25px;
                background: black;
                padding: 20px;
                width: 200px;
                height: 150px;
            }

            .flexbox {
                display: flex;
            }

            .cover {
                border-radius: 25px;
                padding: 15px;
                display: flow;
            }

            .right {
                margin-left: auto;
                margin-right: 0;
            }
        </style>
    </body>
</html>
